@page
@model ClubManagement.Pages.ClubActivityPage.Member.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" asp-route-id="@Model.ClubId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClubActivity[0].ActivityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClubActivity[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClubActivity[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClubActivity[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClubActivity[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClubActivity[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClubActivity[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ClubActivity)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ActivityName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ActivityId" asp-route-clubid="@item.ClubId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ActivityId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ActivityId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="/StudentClubPage/Index">Back to Club List</a>
