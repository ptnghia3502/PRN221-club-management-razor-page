@page
@model ClubManagement.Pages.MemberPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" asp-route-id="@Model.ClubId" >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Membership[0].Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Membership[0].CardMemberUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Membership[0].JoinDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Membership[0].OutDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Membership[0].Status)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Membership) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student!.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardMemberUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JoinDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OutDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.MembershipId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.MembershipId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.MembershipId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
