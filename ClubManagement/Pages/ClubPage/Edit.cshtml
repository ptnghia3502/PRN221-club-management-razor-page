            </div>
            <div class="form-group">
                <label asp-for="Club.Purpose" class="control-label"></label>
                <input asp-for="Club.Purpose" class="form-control" />
                <span asp-validation-for="Club.Purpose" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Club.Status" class="control-label"></label>
                <input asp-for="Club.Status" class="form-control" />
                <span asp-validation-for="Club.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Club.LogoImage" class="control-label"></label>
                <input asp-for="Club.LogoImage" class="form-control" />
