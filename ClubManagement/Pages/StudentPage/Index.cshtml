@page
@model ClubManagement.Pages.StudentPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Manage Students</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th style ="width:100px;text-align:center;">
                @Html.DisplayNameFor(model => model.Student[0].AvatarUrl)
            </th>
            <th>
                Id
            </th>
            <th>
                Name
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Birthday)
            </th>    
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Major)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Student) {
        <tr>
            <td style="width:100px;">
                <img src="@item.AvatarUrl" style="width:90px;height:100px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentCardId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @item.Birthday!.Value.ToShortDateString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade!.GradeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Major!.MajorName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.StudentId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.StudentId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.StudentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
