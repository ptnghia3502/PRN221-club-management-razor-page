@page
@model ClubManagement.Pages.StudentPage.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.StudentCardId)
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.StudentName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Birthday)
        </dt>
        <dd class="col-sm-10">
            @Model.Student.Birthday!.Value.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.AvatarUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Student.AvatarUrl" style="width:90px;" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Grade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Grade!.GradeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Major)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Major!.MajorName)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Student?.StudentId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
