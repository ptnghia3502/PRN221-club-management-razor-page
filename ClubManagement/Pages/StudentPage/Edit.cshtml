@page
@model ClubManagement.Pages.StudentPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Student.StudentId" />
            <div class="form-group">
                <label asp-for="Student.StudentCardId" class="control-label"></label>
                <input asp-for="Student.StudentCardId" class="form-control" required />
                <span asp-validation-for="Student.StudentCardId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.StudentName" class="control-label"></label>
                <input asp-for="Student.StudentName" class="form-control" required />
                <span asp-validation-for="Student.StudentName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Student.Email" class="control-label"></label>
                <input asp-for="Student.Email" class="form-control" type="email" required />
                <span asp-validation-for="Student.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Phone" class="control-label"></label>
                <input asp-for="Student.Phone" class="form-control />
                <span asp-validation-for="Student.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Gender" class="control-label"></label>
                <input asp-for="Student.Gender" class="form-control" required />
                <span asp-validation-for="Student.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Birthday" class="control-label"></label>
                <input asp-for="Student.Birthday" class="form-control" type="date" required />
                <span asp-validation-for="Student.Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.GradeId" class="control-label"></label>
                <select asp-for="Student.GradeId" class="form-control" asp-items="ViewBag.GradeId"></select>
                <span asp-validation-for="Student.GradeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.MajorId" class="control-label"></label>
                <select asp-for="Student.MajorId" class="form-control" asp-items="ViewBag.MajorId"></select>
                <span asp-validation-for="Student.MajorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Avatar" class="control-label"></label>
                <input asp-for="Student.Avatar" class="form-control" type="file" />
                <span asp-validation-for="Student.Avatar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
