@page
@model ClubManagement.Pages.ClubBoardPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ClubBoard</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ClubBoard.ClubId" type="hidden" value="@Model.ClubId" />
            <div class="form-group">
                <label asp-for="ClubBoard.ClubBoardName" class="control-label"></label>
                <input asp-for="ClubBoard.ClubBoardName" class="form-control" required />
                <span asp-validation-for="ClubBoard.ClubBoardName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" asp-route-id="@Model.ClubId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
