@page
@model ClubManagement.Pages.ClubBoardPage.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ClubBoard</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClubBoard.ClubBoardName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClubBoard.ClubBoardName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClubBoard.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClubBoard.Status)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.ClubBoard?.ClubBoardId">Edit</a> |
    <a asp-page="./Index" asp-route-id="@Model.ClubBoard?.ClubId">Back to List</a>
    <a asp-page="./AddNewMemberClubBoard" asp-route-id="@Model.ClubBoard?.ClubBoardId" class="btn btn-primary">Add New Member</a>
</div>

</br>
<div>
    <h4>Members in Club Board</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Member Card</th>
                <th>Name</th>
                <th>Birthday</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model.MemberClubBoard)
            {
                <tr>
                    <td>@Html.DisplayFor(model => member.Membership!.CardMemberUrl)</td>
                    <td>@Html.DisplayFor(model => member.Membership!.Student!.StudentName)</td>
                    <td>@Html.DisplayFor(model => member.Membership!.Student!.Birthday)</td>
                    <td>@Html.DisplayFor(model => member.Role)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

