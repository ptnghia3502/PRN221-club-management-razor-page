@page
@model ClubManagement.Pages.ParticipantPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Participant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Participant.ActivityId" value="@Model.ActivityId" />
            <div class="form-group">
                <label asp-for="Participant.MembershipId" class="control-label"></label>
                <select asp-for="Participant.MembershipId" class="form-control" asp-items="ViewBag.MembershipId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Participant.Status" class="control-label"></label>
                <input asp-for="Participant.Status" class="form-control" />
                <span asp-validation-for="Participant.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" asp-route-id="@Model.ActivityId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
